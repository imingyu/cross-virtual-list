page {
    padding: 10rpx 30rpx;
    box-sizing: border-box;
    font-size: 28rpx;
}
.link {
    position: relative;
    text-align: center;
    box-sizing: border-box;
    border-radius: 10rpx;
    padding: 40rpx 30rpx;
    margin-top: 30rpx;
    line-height: 1.8;
    box-shadow:
        rgb(255, 255, 255) 0px 0px 0px 0px,
        rgba(0, 0, 0, 0.05) 0px 0px 0px 1px,
        rgba(0, 0, 0, 0.1) 0px 10px 15px -3px,
        rgba(0, 0, 0, 0.1) 0px 4px 6px -4px;
}
.link::after {
    content: '>';
    font-family: 'Courier New', Courier, monospace;
    position: absolute;
    top: 50%;
    right: 30rpx;
    transform: translateY(-50%);
    opacity: 0.2;
    font-size: 130%;
}
.link text {
    color: red;
}

.alert-warn {
    font-size: 24rpx;
    padding: 30rpx;
    border-width: 1px;
    border-style: solid;
    margin-top: 40rpx;
    color: #8a6d3b;
    background-color: #fcf8e3;
    border-color: #faebcc;
}
.alert-warn view {
    margin-bottom: 30rpx;
}
.alert-warn text {
    color: blue;
    text-decoration: underline;
}
