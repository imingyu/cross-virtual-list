<scroll-view
    class="vl-container {{ scrollY ? 'scroll-y' : '' }} {{ scrollX && !scrollY ? 'scroll-x' : '' }}"
    scroll-y="{{ scrollY }}"
    scroll-x="{{ scrollX && !scrollY }}"
    bind:scroll="onScroll"
>
    <view class="vl-list" style="{{ elListStyle }}">
        <view
            wx:for="{{ list }}"
            wx:key="key"
            class="vl-item"
            style="transform: {{ scrollX && !scrollY ? 'translateX(' : 'translateY(' }}{{ item.offset + 'px)' }}"
        >
            <item value="{{ item.item }}" index="{{ item.index }}"></item>
        </view>
    </view>
</scroll-view>
