{
    "$schema": "http://json.schemastore.org/tsconfig",
    "$title": "基础配置",
    "include": ["./*.js", "./packages/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "allowJs": false,
        "strictNullChecks": true,
        "moduleResolution": "Node",
        "downlevelIteration": true,
        "lib": ["ES2015", "DOM"],
        "module": "ESNext",
        "target": "es2016",
        "types": [],
        "typeRoots": []
    }
}
